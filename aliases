echo "Sourcing alias file"

# Universal
#
# su and su commands
alias SU='sudo su -'

# sourcing
alias myaliases='source $HOME/.aliases'
alias myzfunc='source $HOME/.zfunctions'
alias myfunc='source $HOME/.functions'
alias myshrc="source $HOME/.$(basename $SHELL)rc"

# ls 
alias ll='ls -alF'
alias la='ls -A'
